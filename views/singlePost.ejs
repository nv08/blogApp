<% if (messages.msg) { %>
    <h4 style="color: rgb(40, 82, 6);text-align: center;"><%= messages.msg %>  </h4>
<% } %>
<div class="singlepost">
    <div class="single-title">
        <p>
            <img src='/partials/user.png' height="50px" width="50px" >
            <%= singlePost.author.author_name %> 
        </p>
        <h2>
            <%= singlePost.title %> 
        </h2>
        
    </div>
   
    <div class="title" style="justify-content: center;">
        <p style="padding:5%;text-align: left;word-break: break-all; font-size: medium; white-space:pre-line ;">
            <%= singlePost.content %> 
        </p>
        
    </div>

</div>
<h4 style="text-align: center;">
    <% if (name) { %>
        <a href='/dashboard'> Back to dashboard</a>
    <% } else { %>
        <a href='/'> Back to Home</a>
    <% } %>
        
</h4>  
