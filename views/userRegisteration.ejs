
<div class="form-container">
    <div class="form-left">
        
        <div class="form-left-fields">
            <h2 style="text-align: center;">
                REGISTER
            </h2>
            
                <div class="infos">
                    <% if (messages.msg) { %>
                        <h4 style="color: red;text-align: center;"><%= messages.msg %>  </h4>
                    <% } %>
                    
                </div>
               
           
            <form action="/register" method="POST" onblur="event.preventDefault(); validate()" name="form">
                <ol>
                    <li>
                        <input type="text" name="user" placeholder="enter your name" required minlength="5">
                    </li>
                    <li>
                        <input type="text" name="email" placeholder="enter your email" required >
                    </li> 
                   
                    <li>
                        <input type="password" name="pass" placeholder="enter your password" required minlength="5" maxlength="16"> 
                    </li>
                    <li>
                        <input type="checkbox" name="isAuthor"> Author Account?
                    </li>
                </ol>
                
                
                <input type="submit" value="REGISTER" name="submit" >
            </form>
        </div>

    </div>
    <div class="form-right">
        <img src='/register.png' height="55%">
    </div>
</div>


